<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns="http://www.w3.org/ns/widgets"
	xmlns:gap="http://phonegap.com/ns/1.0"
	id="com.deadlypenguin.concentration-rummy-scorer"
	version="1.0.0">

	<name>Concentration Rummy Scorer</name>

	<description>
		A score card for concentration rummy
	</description>

	<author href="http://about.me/patrick.connelly"
		email="patrick@deadlypenguin.com">
		Patrick Connelly
	</author>

	<gap:platforms>
		<gap:platform name="android" minVersion="2.1" />
	</gap:platforms>

	<icon src="icon.png" gap:role="default" />

	<feature name="http://api.phonegap.com/1.0/file"/>

	<!-- sample preference specification -->
	<preference name="orientation" value="landscape" />
	<preference name="target-device" value="tablet" />
	<preference name="autorotate" value="false" readonly="true"/>
</widget>